<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/medbg"
    android:weightSum="1">

    <TextView
        android:text="SmartBudget"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="20pt"
        android:textStyle="bold"/>

    <TextView
        android:text="(this textview will be replaced by custom logo)"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight=".3"/>

    <TextView
        android:text="SPENDING POWER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="10pt"
        android:textStyle="bold"/>

    <TextView
        android:text="$1,000,000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16pt"
        android:textStyle="bold"
        android:layout_weight=".5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="INCOME (this will be replaced by custom button)"
        android:id="@+id/income"
        android:layout_gravity="center_horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXPENSES (this will be replaced by custom button)"
        android:id="@+id/expenses"
        android:layout_gravity="center_horizontal" />


</LinearLayout>
