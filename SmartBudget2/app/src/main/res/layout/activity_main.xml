<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/medbg"
    android:weightSum="1">

    <ImageView
        android:layout_width="263dp"
        android:layout_height="263dp"
        android:layout_gravity="center"
        android:src="@drawable/sblogo" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Dummy content. -->
        <LinearLayout android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView android:id="@android:id/text1"
                style="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp" />

            <TextView style="?android:textAppearanceMedium"
                android:lineSpacingMultiplier="1.2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Test Scroll" />

        </LinearLayout>

    </ScrollView>


    <TextView
        android:text="SPENDING POWER"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="10pt"
        android:textStyle="bold"/>

    <TextView
        android:text="$1,000,000"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="16pt"
        android:textStyle="bold"
        android:layout_weight=".5"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="INCOME (this will be replaced by custom button)"
        android:id="@+id/iButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonbg" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="EXPENSES (this will be replaced by custom button)"
        android:id="@+id/eButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonbg" />


</LinearLayout>
