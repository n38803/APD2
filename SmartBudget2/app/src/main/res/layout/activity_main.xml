<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:background="@drawable/medbg"
    android:weightSum="1">

    <ImageView
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_gravity="center"
        android:src="@drawable/sblogo" />


    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/relativelayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:id="@+id/myImageView"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:src="@drawable/spbg"
            android:alpha=".25"
            android:background="@drawable/medbg" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="150dp"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:text="SPENDING POWER"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_weight=".6"
                android:textSize="10pt"
                android:textStyle="bold"/>

            <TextView
                android:text="$1,000,000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="16pt"
                android:textStyle="bold"
                android:layout_weight=".4"
                android:id="@+id/spendingPower"/>
        </LinearLayout>

    </RelativeLayout>



    <Button
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="INCOME (this will be replaced by custom button)"
        android:id="@+id/iButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonbg" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="EXPENSES (this will be replaced by custom button)"
        android:id="@+id/eButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/buttonbg" />


</LinearLayout>
