<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fullsail.android.smartbudget" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".IncomeActivity"
            android:label="Review your Income" >
        </activity>

        <activity
            android:name=".ExpenseActivity"
            android:label="Review your Expenses" >
        </activity>

        <activity
            android:name=".AddActivity"
            android:label="Add Your Income or Expense" >
        </activity>

    </application>

</manifest>
